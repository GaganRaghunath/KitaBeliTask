    <style name="KitaBeliText.Button">
        <item name="fontFamily">@font/opensans_medium</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="KitaBeliText.Caption">
        <item name="fontFamily">@font/opensans_medium</item>
