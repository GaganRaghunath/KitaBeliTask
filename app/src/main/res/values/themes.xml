    <style name="KitaBeliText.Headline6">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="KitaBeliText.Subtitle1">
        <item name="fontFamily">@font/opensans_medium</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="KitaBeliText.Subtitle2">
        <item name="fontFamily">@font/opensans_medium</item>
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
